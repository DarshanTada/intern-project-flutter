rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Games collection - read-only for clients
    match /games/{gameId} {
      allow read: if true; // Anyone can read games
      allow write: if false; // Only backend can write (via service account)
    }
    
    // Team stats collection - read-only for clients
    match /teamStats/{teamId} {
      allow read: if true; // Anyone can read team stats
      allow write: if false; // Only backend can write (via service account)
    }
    
    // Teams collection (if used) - read-only for clients
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

